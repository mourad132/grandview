<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Edit Your Profile
      </h1>
      <%- include("./partials/messages") %>
	<form action="/edit/profile?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
			value="<%= profile.name %>"
            class="form-control"
            placeholder="Edit Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
		<div class="form-group">
		<div class="form-group">
          <label for="email">Apartment Number</label>
          <input
            type="text"
            id="apartment"
            name="apartment"
			value="<%= profile.apartment %>"
            class="form-control"
            placeholder="Edit Your Apartment Number"
            value="<%= typeof apartment != 'undefined' ? apartment : '' %>"
          />
        </div>
          <label for="bio">bio</label>
          <textarea
            type="text"
            id="bio"
            name="bio"
            class="form-control"
            placeholder="bio"
            value="<%= typeof bio != 'undefined' ? bio : '' %>"
			><%= profile.bio %></textarea>
        </div>
		<label for="pass">Phone Number</label>
          <input
            type="number"
            id="number"
            name="number" 
			value="<%= profile.number %>"
        	class="form-control"
            placeholder="Phone Number"
            value="<%= typeof number != 'undefined' ? number : '' %>"
			/>
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Edit
        </button>
      </form>
    </div>
  </div>
</div>