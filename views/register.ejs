<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <%- include("./partials/messages") %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        <div class="form-group">
          <label for="username">User Name</label>
          <input
            type="username"
            id="username"
            name="username"
            class="form-control"
            placeholder="Enter username"
            value="<%= typeof username != 'undefined' ? username : '' %>"
          />
		<div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
		<div class="form-group">
          <label for="email">Apartment Number</label>
          <input
            type="text"
            id="apartment"
            name="apartment"
            class="form-control"
            placeholder="eg: U-606, V-402, L-305"
	    style="text-transform: uppercase"
            value="<%= typeof apartment != 'undefined' ? apartment : '' %>"
          />
        </div>
          <label for="bio">About (Optional)</label>
          <textarea
            type="text"
            id="bio"
            name="bio"
            class="form-control"
            placeholder="bio"
			>
		</textarea>
        </div>
		<label for="pass">Phone Number</label>
          <input
            type="number"
            id="number"
            name="number" 
        	class="form-control"
            placeholder="Phone Number"
            value="<%= typeof number != 'undefined' ? number : '' %>"
			/>
        </div>
          <label for="pass"> Registeration password</label>
          <input
            type="text"
            id="pass"
            name="pass"
            class="form-control"
            placeholder="registeration password"
            value="<%= typeof pass != 'undefined' ? pass : '' %>"
			/>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
		</form>
      <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>
